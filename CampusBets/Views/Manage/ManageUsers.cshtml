@using CampusBets.Models
@model List<AppUser>

<h2>Manage Users</h2>

<div class="table100 ver1 m-b-110">
    <div class="table-responsive">          
        <table class="table">
            <thead>
                <tr class="row100 head">
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>User Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @if(Model != null && Model.Count > 0)
            {
                int x = 1;
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr id="user_@user.Id">
                            <td>@x</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                @Html.ActionLink("Edit", "ManageUserProfile", "Manage", new { userId = user.Id }, null)
                                <span> | </span>
                                @Html.ActionLink("Remove", "RemoveUser", "Account", new { userId = user.Id }, null)
                            </td>
                        </tr>
                        x++;
                    }
                </tbody>
            }
        </table>
    </div>
</div>